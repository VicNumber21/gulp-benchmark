{
    "env": {
        "mocha": true
    },
    "extends": "airbnb",
    "rules": {
        "comma-dangle": [2, "never"],
        "func-names": 0,
        "max-len": [2, 140],
        "indent": [2, 4, {"SwitchCase": 1}],
        "one-var": 0,
        "object-curly-spacing": [2, "never"],
        "space-before-function-paren": [2, "always"]
    }
}
